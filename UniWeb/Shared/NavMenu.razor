<div class="navbar-container">
    <!-- Översta raden med logotyp och hamburgermeny -->
    <div class="top-row navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="">
                <img src="logo.png" alt="Logo" class="navbar-logo" /> <!-- Lägg till din logotyp här -->
            </a>
            <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                ☰
            </button>
        </div>
    </div>

    <!-- Navigationsmenyn -->
    <div class="@NavMenuCssClass nav-scrollable">
        <nav class="flex-column">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="Blog">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Blog
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="Admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Admin
                </NavLink>
            </div>
            <!-- Lägg till fler länkar här om behövs -->
        </nav>
    </div>
</div>

@code {
    // Håller koll på om menyn är kollapsad
    private bool collapseNavMenu = true;

    // Dynamisk CSS-klass för menyvisning
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Metod för att växla mellan kollapsad och expanderad meny
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
